{
  "name": "telegram-earning-miniapp",
  "version": "1.0.0",
  "description": "Telegram Earning Mini-App with MERN Stack",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "build": "npm install && cd frontend && npm install && npm run build",
    "start": "node backend/server.js",
    "install-all": "npm install && cd frontend && npm install",
    "init-admin": "node backend/scripts/initAdmin.js"
  },
  "keywords": [
    "telegram",
    "miniapp",
    "earning",
    "faucet"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
